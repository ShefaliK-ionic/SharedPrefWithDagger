<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
android:hint="Hi.. Your Name"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btnSaveGetData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save &amp; Get Primitive Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etMyName" />


    <TextView
        android:id="@+id/tvGetSaveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSaveGetData"
        android:textColor="@color/black"

        />

    <Button
        android:id="@+id/btnSaveGetCustomData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save &amp; Get Custom Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGetSaveData" />


    <TextView
        android:id="@+id/tvGetSaveCustomData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSaveGetCustomData"
        android:textColor="@color/black"

        />



</androidx.constraintlayout.widget.ConstraintLayout>